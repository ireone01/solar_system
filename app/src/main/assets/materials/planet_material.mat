material {
    name : "PlanetMaterial",
    shadingModel : unlit,
    parameters : [
        { type : float4, name : baseColor },
        { type : float4, name : emissive },
        { type : float, name : emissiveIntensity }
    ],
    requires : [
        uv0
    ],
    blending : opaque
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        material.baseColor = materialParams.baseColor;
        material.emissive = materialParams.emissive * materialParams.emissiveIntensity;
    }
}
