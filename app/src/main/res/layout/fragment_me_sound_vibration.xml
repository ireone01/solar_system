<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/white"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_sound_vibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sound_vibration"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/text_color"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL_sound_effect"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/text_sound_vibration"
        app:layout_constraintTop_toBottomOf="@id/text_sound_vibration">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_volume"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sound_effect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/img1"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch1_sound_vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LL_vibration"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/CL_sound_effect"
        app:layout_constraintTop_toBottomOf="@id/CL_sound_effect"
        android:orientation="horizontal"
        >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img7"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_vibration"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vibration"
        app:layout_constraintStart_toEndOf="@id/img7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch2_sound_vibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain_sound_vibration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:background="@drawable/bg_corner_12"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LL_vibration">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_drop1"
            app:layout_constraintStart_toEndOf="@id/radio_btn1"
            app:layout_constraintTop_toTopOf="@id/radio_btn1"
            app:layout_constraintBottom_toBottomOf="@id/radio_btn1"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="1s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/radio_btn1"
            app:layout_constraintBottom_toBottomOf="@id/radio_btn1"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/radio_btn1"
            android:background="@color/black"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/radio_btn1"
            app:layout_constraintTop_toBottomOf="@id/radio_btn1" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_drop2"
            app:layout_constraintStart_toEndOf="@id/radio_btn2"
            app:layout_constraintTop_toTopOf="@id/radio_btn2"
            app:layout_constraintBottom_toBottomOf="@id/radio_btn2"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="3s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/radio_btn2"
            app:layout_constraintBottom_toBottomOf="@id/radio_btn2"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/radio_btn2"
            android:background="@color/black"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/radio_btn2"
            app:layout_constraintTop_toBottomOf="@id/radio_btn2" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_flowing1"
            app:layout_constraintStart_toEndOf="@id/radio_btn3"
            app:layout_constraintTop_toTopOf="@id/radio_btn3"
            app:layout_constraintBottom_toBottomOf="@id/radio_btn3"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="5s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/radio_btn3"
            app:layout_constraintBottom_toBottomOf="@id/radio_btn3"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/radio_btn3"
            android:background="@color/black"
            />


        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/radio_btn3"
            app:layout_constraintTop_toBottomOf="@id/radio_btn3" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_flowing2"
            app:layout_constraintStart_toEndOf="@id/radio_btn4"
            app:layout_constraintTop_toTopOf="@id/radio_btn4"
            app:layout_constraintBottom_toBottomOf="@id/radio_btn4"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="7s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/radio_btn4"
            app:layout_constraintBottom_toBottomOf="@id/radio_btn4"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/radio_btn4"
            android:background="@color/black"
            />


        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/radio_btn4"
            app:layout_constraintTop_toBottomOf="@id/radio_btn4" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_flowing3"
            app:layout_constraintStart_toEndOf="@id/radio_btn5"
            app:layout_constraintTop_toTopOf="@id/radio_btn5"
            app:layout_constraintBottom_toBottomOf="@id/radio_btn5"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="9s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/radio_btn5"
            app:layout_constraintBottom_toBottomOf="@id/radio_btn5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/seek_bar_sound_vibration"
        app:layout_constraintBottom_toBottomOf="@id/seek_bar_sound_vibration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/seek_bar_sound_vibration"
        android:src="@drawable/ic_minus"
        />


    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seek_bar_sound_vibration"
        android:layout_width="300dp"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@id/constrain_sound_vibration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/seek_bar_sound_vibration"
        app:layout_constraintBottom_toBottomOf="@id/seek_bar_sound_vibration"
        app:layout_constraintStart_toEndOf="@id/seek_bar_sound_vibration"
        android:src="@drawable/ic_plus"
        />





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/done_sound_vibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_bar_sound_vibration"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_primary_24dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>