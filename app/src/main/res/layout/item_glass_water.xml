<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/item"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="10dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_white48_12dp">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_glass_water"/>

        <TextView
            android:id="@+id/itemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/work_sans_500"
            android:layout_gravity="center"
            android:textColor="@color/_0A0C11"
            android:text="+20 ml"
            android:textSize="18sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvCount"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/bg_circle_white"
        android:gravity="center"
        android:fontFamily="@font/work_sans_700"
        android:layout_gravity="center"
        android:textColor="@color/_0247C8"
        android:text="2"
        app:layout_constraintTop_toTopOf="@id/item"
        app:layout_constraintBottom_toTopOf="@id/item"
        app:layout_constraintEnd_toEndOf="@id/item"
        app:layout_constraintStart_toEndOf="@id/item"
        android:textSize="14sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
