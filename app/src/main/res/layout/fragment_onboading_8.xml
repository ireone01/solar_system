<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/wake_up"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/llayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"

        android:padding="10dp"
        android:background="@drawable/bg_corner_12"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_usually_wake_up"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hydrating_right_after_waking_up_boosts_your_energy_in_the_morning"
            android:textSize="16sp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <NumberPicker
        android:id="@+id/wheelPickerWeigh"
        android:layout_width="50dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/wheelPickerWeigh2"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <NumberPicker
        android:id="@+id/wheelPickerWeigh2"
        android:layout_width="50dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toEndOf="@id/wheelPickerWeigh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/wheelPickerWeigh3"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <NumberPicker
        android:id="@+id/wheelPickerWeigh3"
        android:layout_width="50dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toEndOf="@id/wheelPickerWeigh2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>