<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.example.solar_system_scope_app.FilamentView
        android:id="@+id/solarSystemView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/btn_orbit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="@drawable/button_backgound"
    android:contentDescription="btn_setting"
    android:scaleType="centerInside"
    android:padding="8dp"
    android:src="@drawable/settings"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:tooltipText="btn_setting_tooltip" />

    <ImageButton
        android:id="@+id/btn_orbit1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="@drawable/button_backgound"
        android:contentDescription="btn_setting"
        android:scaleType="centerInside"
        android:padding="8dp"
        android:src="@drawable/settings"
        app:layout_constraintTop_toBottomOf="@id/btn_orbit"
        app:layout_constraintStart_toStartOf="parent"
        app:tooltipText="btn_setting_tooltip" />

    <ImageButton
        android:id="@+id/btn_orbit2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="@drawable/button_backgound"
        android:contentDescription="btn_setting"
        android:scaleType="centerInside"
        android:padding="8dp"
        android:src="@drawable/settings"
        app:layout_constraintTop_toBottomOf="@id/btn_orbit1"
        app:layout_constraintStart_toStartOf="parent"
        app:tooltipText="btn_setting_tooltip" />



    <LinearLayout
        android:id="@+id/infoPanel"
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_backgound"
        android:padding="8dp"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/planetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Hành Tinh"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

        <SurfaceView
            android:id="@+id/miniPlanetView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>